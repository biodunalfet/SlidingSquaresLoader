<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hamza.slidingsquaresloader.MainActivity">

    <com.hamza.slidingsquaresloaderview.SlidingSquareLoaderView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_centerHorizontal="true"
        app:sslv_start="true"
        app:sslv_delay="15"
        app:sslv_duration="150"
        app:sslv_gap="2dp"
        app:sslv_square_length="12dp"
        app:sslv_color="#ffea00"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        />

    <com.hamza.slidingsquaresloaderview.SlidingSquareLoaderView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sliding_view"
        android:layout_marginBottom="20dp"
        android:layout_centerInParent="true"
        app:sslv_start="true"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        />

    <com.hamza.slidingsquaresloaderview.SlidingSquareLoaderView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sliding_view"
        android:layout_centerHorizontal="true"
        android:id="@+id/sliding_view2"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="@string/start_stop"
        android:id="@+id/button"/>


</RelativeLayout>
